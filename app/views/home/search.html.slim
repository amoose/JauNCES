.row
  .main-search
    = render 'layouts/search'


.row
  .col-xs-8
    h1
    - if @schools.any?
      h2 Search Results
      ul
        - @schools.each do |school|
          li
            = render :partial => 'school', :object => school
    - else
      h2= "No schools found matching #{params[:query]}"


